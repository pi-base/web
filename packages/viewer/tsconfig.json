{
  "extends": "./.svelte-kit/tsconfig.json",
  "include": [
    "src/**/*",
    "cypress/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "types": [
      "node",
      "cypress",
      "vite/client"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "module": "es2022",
  }
}