{
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node",
  "onCreateCommand": "pnpm install && pnpm run --filter core build",
  "postAttachCommand": {
    "compile": "pnpm run --filter compile dev"
  },
  "postCreateCommand": "git clone https://github.com/pi-base/data.git .data",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "doc/codespaces/welcome.md"
      ]
    },
    "vscode": {
      "extensions": [],
      "settings": {}
    }
  }
}