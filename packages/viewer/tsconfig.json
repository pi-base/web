{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*",
    "cypress/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "types": [
      "node",
      "cypress",
      "vite/client"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "module": "es2022"
  }
}