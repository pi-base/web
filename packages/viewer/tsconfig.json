{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*",
    "cypress/**/*"
  ],
  "exclude": [
    "rollup.config.js",
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "types": [
      "node",
      "cypress"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
  }
}