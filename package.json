{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npx lerna run build",
    "fmt": "prettier --write 'packages/**/*.ts'",
    "fmt:check": "prettier --write 'packages/**/*.ts'",
    "lint": "eslint 'packages/**/*.ts' --fix",
    "lint:check": "eslint 'packages/**/*.ts'",
    "postinstall": "husky install",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --no-cache",
    "test:cov": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watchAll"
  },
  "devDependencies": {
    "@pi-base/dev": "^0.1.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.1.4",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.11",
    "@typescript-eslint/parser": "^4.29.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.4.0",
    "husky": ">=7",
    "jest": "^27.0.6",
    "jest-circus": "^27.0.6",
    "js-yaml": "^4.1.0",
    "lerna": "^4.0.0",
    "lint-staged": ">=11",
    "prettier": "^2.3.2",
    "theredoc": "^1.0.0",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{css,yml,md}": "prettier --write"
  }
}