{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "module": "es2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist/esm",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    // TODO: workaround for https://github.com/vitejs/vite/issues/15714
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}